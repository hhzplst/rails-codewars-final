<div class='col-md-4 col-md-offset-2'>
  <div class='jumbotron' id='signupForm'>
    <%= form_for :user, url:password_reset_path(@user.password_reset_token), method: :patch do |f|%>
    <h3>Change Your Password</h3><br>  
    <div class='form-group'>
    <%= f.label :password %>
    <%= f.password_field :password, autofocus: true%>
    </div>
    <div class='form-group'>
    <%= label_tag :password %>
    <%= password_field_tag :password, params[:password], class: 'form-control'%>
    </div>
    <%= f.submit "Reset Password"%> <br><br>
    <% end %>
  </div>
</div>



